<%= javascript_include_tag "problems" %>


<p>
  <a class="btn btn-primary" type="button" href="/problems/problem_new/"><i class="icon-plus"></i>Зарегистрировать проблему</a>
</p>




<table class="table table-hover table-bordered table-condensed">
  <caption>Мои проблемы</caption>
  <thead>
  <tr>
    <th>Тема</th>
    <th class="span2">Дата</th>
    <th class="span1"></th>
  </tr>
  </thead>
  <tbody>
      <% @my_proplems.each do |proplems| %>
          <% user_data = User.find(proplems.user_id) %>
          <tr>
            <td><%= user_data.login %></td>
            <td><%= proplems.topic %></td>
            <td><%= my_tickets.created_at.strftime("%d-%m-%Y") %></td>
            <td>
              <a class="btn btn-mini btn-primary" type="button" href="/proplems/proplem_edit/<%= proplems.id %>"><i class="icon-edit"></i></a>
            </td>
          </tr>
      <% end %>
  </tbody>
</table>