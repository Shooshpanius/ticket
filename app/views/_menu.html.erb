<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="/"><div id='menu_text' name='menu_text'>Ticket system</div></a>



    <% if session[:is_login] %>

        <button type="button" class="btn pull-right" onclick='logout()'>Выход</button>


        <% if session[:is_admin] %>
            <ul class="nav pull-right">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Администрирование
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><a href="/admin/users">Пользователи</a></li>
                    <li><a href="/admin/groups">Группы</a></li>

                  </ul>
                </li>
            </ul>
        <% end %>

    <% else %>

        <form id="login_form" name="login_form" class="navbar-form pull-right">
          <input type="text" class="span3" id="login" name="login" placeholder="login">
