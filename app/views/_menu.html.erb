<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="/"><div id='menu_text' name='menu_text'>Ticket system</div></a>


    <% if session[:is_login] %>
        <ul class="nav pull-right">

          <li><a href="#"><i class="icon-user"></i> <%= session[:user_login] %></a></li>
          <li><button type="button" class="btn pull-right" onclick='logout()'>Выход</button> </li>
        </ul>


        <% if session[:is_admin] %>
            <ul class="nav pull-right">
                <li class="dropdown"
                    <%= (controller.controller_name=="users")||(controller.controller_name=="groups")?"style=background-color:#FFDAB9":""   %>
                >
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Администрирование
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li
                        <%= (controller.controller_name=="users")?"style=background-color:#FFDAB9":""   %>
                    ><a href="/admin/users">Пользователи</a></li>
                    <li
                        <%= (controller.controller_name=="groups")?"style=background-color:#FFDAB9":""   %>
                    ><a href="/admin/groups">Группы</a></li>
                  </ul>
                </li>
            </ul>
        <% end %>

        <ul class="nav">


          <% if session[:user_login] == admin %>

          <ul  class="nav pull-right">
            <li
            <%= (controller.controller_name=="supply")?"style=background-color:#FFDAB9":"" %>
            class="dropdown"
            >
              <a href="" class="dropdown-toggle" data-toggle="dropdown">
                Заказы
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li
                <%= (controller.controller_name=="supply")&&(controller.action_name=="in")?"style=background-color:#FFDAB9":""   %>
                ><a href="/supply/in">Входящие</a></li>
                <li
                <%= (controller.controller_name=="supply")&&(controller.action_name=="out")?"style=background-color:#FFDAB9":""   %>
                ><a href="/supply/out">Исходящие</a></li>

                <li
                <%= (controller.controller_name=="supply")&&(controller.action_name=="arch_in")?"style=background-color:#FFDAB9":""   %>
                ><a href="/supply/arch_in">Входящие (архив)</a></li>
                <li
                <%= (controller.controller_name=="supply")&&(controller.action_name=="arch_out")?"style=background-color:#FFDAB9":""   %>
                ><a href="/supply/arch_out">Исходящие (архив)</a></li>
              </ul>
            </li>
          </ul>

          <% end %>

          <ul class="nav pull-right">
            <li class="dropdown"
                <%= (controller.controller_name=="problems")?"style=background-color:#FFDAB9":""   %>
            >
              <a href="" class="dropdown-toggle" data-toggle="dropdown">
                Проблемы
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li
                    <%= (controller.controller_name=="problems")&&(controller.action_name=="out")?"style=background-color:#FFDAB9":""   %>
                ><a href="/problems/out">Мои проблемы</a></li>
                <li
                    <%= (controller.controller_name=="problems")&&(controller.action_name=="in")?"style=background-color:#FFDAB9":""   %>
                ><a href="/problems/in">К рассмотрению</a></li>
              </ul>
            </li>
          </ul>

          <ul  class="nav pull-right">
            <li
                <%= (controller.controller_name=="tickets")?"style=background-color:#FFDAB9":"" %>
            class="dropdown"
            >
              <a href="" class="dropdown-toggle" data-toggle="dropdown">
                Заявки
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li
                    <%= (controller.controller_name=="tickets")&&(controller.action_name=="in")?"style=background-color:#FFDAB9":""   %>
                 ><a href="/tickets/in">Входящие</a></li>
                <li
                    <%= (controller.controller_name=="tickets")&&(controller.action_name=="out")?"style=background-color:#FFDAB9":""   %>
                ><a href="/tickets/out">Исходящие</a></li>

                <li
                    <%= (controller.controller_name=="tickets")&&(controller.action_name=="arch_in")?"style=background-color:#FFDAB9":""   %>
                ><a href="/tickets/arch_in">Входящие (архив)</a></li>
                <li
                    <%= (controller.controller_name=="tickets")&&(controller.action_name=="arch_out")?"style=background-color:#FFDAB9":""   %>
                ><a href="/tickets/arch_out">Исходящие (архив)</a></li>
              </ul>
            </li>
          </ul>



        </ul>


  <% else %>

        <form id="login_form" name="login_form" class="navbar-form pull-right">
          <input type="text" class="span3" id="login" name="login" placeholder="login">
          <input type="password" class="span3" id="password" name="password" placeholder="password">
          <button type="submit" class="btn">Submit</button>
        </form>

    <% end %>




  </div>
</div>

