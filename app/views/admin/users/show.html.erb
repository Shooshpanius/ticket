<%= javascript_include_tag "admin/users" %>

<table class="table table-hover table-bordered table-condensed">


  <thead>
      <tr>
          <th class="span1">id</th>
          <th class="span2">login</th>
          <th>ФИО</th>
          <th class="span2"></th>
      </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.login %></td>
        <td><%= user.f_name %> <%= user.i_name %> <%= user.o_name %></td>
        <td>
          <a class="btn btn-mini btn-primary" type="button" href="/admin/useredit/<%= user.id %>"><i class="icon-edit"></i></a>
          <button class="btn btn-mini btn-danger" type="button"><i class="icon-trash"></i></button>

        </td>
      </tr>





    <% end %>
  </tbody>

</table>
